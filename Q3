#include <iostream>
using namespace std;

int main(){
    int n, w[100][100];
    cout << "Enter number of vertices: ";
    cin >> n;

    cout << "Enter weight matrix:\n";
    for(int i=0;i<n;i++)
        for(int j=0;j<n;j++)
            cin >> w[i][j];

    int key[100], parent[100], mst[100]={0};

    for(int i=0;i<n;i++)
        key[i] = 999999;

    key[0] = 0;
    parent[0] = -1;

    for(int c=0;c<n-1;c++){
        int u = -1;

        for(int i=0;i<n;i++)
            if(!mst[i] && (u==-1 || key[i] < key[u]))
                u = i;

        mst[u] = 1;

        for(int v=0; v<n; v++){
            if(w[u][v] && !mst[v] && w[u][v] < key[v]){
                key[v] = w[u][v];
                parent[v] = u;
            }
        }
    }

    cout << "\nEdges in MST:\n";
    for(int i=1;i<n;i++)
        cout << parent[i] << " - " << i << "  =  " << w[i][parent[i]] << endl;
}
