#include <iostream>
using namespace std;

int main(){
    int n, w[100][100], src;

    cout << "Enter number of vertices: ";
    cin >> n;

    cout << "Enter weight matrix:\n";
    for(int i=0;i<n;i++)
        for(int j=0;j<n;j++)
            cin >> w[i][j];

    cout << "Enter source: ";
    cin >> src;

    int dist[100], visited[100]={0};

    for(int i=0;i<n;i++)
        dist[i] = 999999;

    dist[src] = 0;

    for(int c=0;c<n;c++){
        int u = -1;
        for(int i=0;i<n;i++)
            if(!visited[i] && (u==-1 || dist[i] < dist[u]))
                u = i;

        visited[u] = 1;

        for(int v=0; v<n; v++){
            if(w[u][v] > 0 && dist[u] + w[u][v] < dist[v])
                dist[v] = dist[u] + w[u][v];
        }
    }

    cout << "Shortest distances:\n";
    for(int i=0;i<n;i++)
        cout << "Node " << i << ": " << dist[i] << endl;
}
